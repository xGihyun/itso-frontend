---
import { itsoLogo, itsoTorch, itsoBlueBg } from "@/assets/images";
import { Button, buttonVariants } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { REGISTRATION_LINK } from "astro:env/client";
import HomeLayout from "./_layouts/home.astro";

---

<Layout>
  <HomeLayout>
    <div class="absolute -bottom-32 z-10 left-36 p-[inherit] w-1/2 hidden xl:block">
      <Image
        src={itsoTorch}
        class="w-full origin-left"
        alt="ITSO Torch"
        draggable="false"
      />
    </div>

    <div class="flex items-center justify-center xl:justify-end h-full z-10 md:-bottom-8 md:right-6 relative">
      <div>
        <Image
          src={itsoLogo}
          class="object-cover w-[90%] max-w-xl xl:max-w-3xl"
          alt="IT Skills Olympics"
          draggable="false"
        />

        <p class="font-metropolis-semibold text-sm md:text-xl lg:text-2xl">
          Augmenting Security Towards the Techno-Utopia
        </p>

        <div class="space-x-4 mt-4">
          <a
            href={REGISTRATION_LINK}
            class={buttonVariants({ class: "rounded-full" })}
            target="_blank"
            rel="noreferrer">Register</a
          >
          <a
            href="/about"
            class={buttonVariants({
              variant: "outline",
              class: "bg-transparent rounded-full",
            })}
          >
            Know More
          </a>
        </div>
      </div>
    </div>
  </HomeLayout>
</Layout>
